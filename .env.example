# BioDockify Docking Studio - Environment Configuration
# Copy this file to .env and configure for your environment

# ===================
# Application Settings
# ===================

# Application mode: production, development
APP_MODE=production

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===================
# Backend Settings
# ===================

# Backend host and port
BACKEND_HOST=localhost
BACKEND_PORT=8000

# ===================
# AI Settings
# ===================

# AI mode: auto, ollama, offline
AI_MODE=auto

# Ollama settings
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Allow AI features (true/false)
ALLOW_AI=true

# ===================
# Docker Settings
# ===================

# Docker API endpoint
DOCKER_HOST=unix:///var/run/docker.sock

# ===================
# Security Settings
# ===================

# Enable security scanning (true/false)
SECURITY_SCAN_ENABLED=true

# Run security scan on startup (true/false)
SECURITY_SCAN_ON_STARTUP=false

# ===================
# GPU Settings
# ===================

# GPU mode: auto, force_gpu, force_cpu
GPU_MODE=auto

# ===================
# Database Settings
# ===================

# Database path (relative to backend)
DB_PATH=backend/storage/jobs.db

# ===================
# Paths
# ===================

# Storage directory
STORAGE_DIR=backend/storage

# Upload directory
UPLOAD_DIR=uploads

# Data directory
DATA_DIR=data

# ===================
# Frontend Settings
# ===================

# Frontend theme: light, dark, system
THEME=system

# Auto-start backend (true/false)
AUTO_START_BACKEND=true
